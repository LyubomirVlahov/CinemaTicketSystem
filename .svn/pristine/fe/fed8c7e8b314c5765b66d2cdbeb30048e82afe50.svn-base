<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<title>Успешно закупени билети!</title>
	<link rel="stylesheet" href="styles/Style.css" type="text/css" media="all" />
	<link href="styles/visStyles.css" type="text/css" rel="stylesheet" />
	<link href="styles/visStylesUser.css" type="text/css" rel="stylesheet" />
	<link href="styles/global.css" type="text/css" rel="stylesheet" />
</head>
<body>
<!-- Shell -->
<div id="shell">
	<!-- Header -->
	<div id="header">
		<h1 id="logo"><a href="index.jsp">TU Cinema</a></h1>
		<div class="social">	
		</div>
		
		<!-- Navigation -->
		<div id="navigation">
			<ul>
				<li style="font-size:16px; font-weight: bold; color: white;"> Здравейте <%= request.getUserPrincipal().getName()%> </li>
			    <li><a href="index.jsp">Начало</a></li>
			    <li><a href="Logout.jsp">Изход</a></li> 
			    <li><a href="Profile.jsp">Профил</a></li> 
			</ul>
		</div>
		<!-- end Navigation -->
		
		<!-- Sub-menu -->
		<div id="sub-navigation">
			
		</div>
		<!-- end Sub-Menu -->
		
	</div>
	<!-- end Header -->
	
	<!-- Main -->
	<div id="main">
		<!-- Content -->
		<div id="content">

			<!-- Box -->
			<div class="box">
			
				<h1>Вашите билети бяха закупени успешно.</h1><br><br>
				<h2>Уникалният номер на вашата резервация е:</h2><br>
				<h2 style="color: green;"><%= request.getParameter("UUID") %></h2><br>
				<h2>Моля представете го на касата, за да получите своите билети.</h2>
				<br>
			</div>
		<!-- end Box -->
				
			<div class="cl">&nbsp;</div>
		</div>
		<!-- end Content -->
			
		<div class="cl">&nbsp;</div>
	</div>
	<!-- end Main -->
</div>
<!-- end Shell -->
</body>
</html>