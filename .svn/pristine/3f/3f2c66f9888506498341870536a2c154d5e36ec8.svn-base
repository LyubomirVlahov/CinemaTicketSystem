@CHARSET "UTF-8";

.btn {
  background: #f29408;
  background-image: -webkit-linear-gradient(top, #f29408, #856c31);
  background-image: -moz-linear-gradient(top, #f29408, #856c31);
  background-image: -ms-linear-gradient(top, #f29408, #856c31);
  background-image: -o-linear-gradient(top, #f29408, #856c31);
  background-image: linear-gradient(to bottom, #f29408, #856c31);
  -webkit-border-radius: 28;
  -moz-border-radius: 28;
  border-radius: 28px;
  text-shadow: 0px 4px 3px #666666;
  font-family: Arial;
  color: #ffffff;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  text-decoration: none;
}

.btn:hover {
  background: #34f703;
  background-image: -webkit-linear-gradient(top, #34f703, #0f751b);
  background-image: -moz-linear-gradient(top, #34f703, #0f751b);
  background-image: -ms-linear-gradient(top, #34f703, #0f751b);
  background-image: -o-linear-gradient(top, #34f703, #0f751b);
  background-image: linear-gradient(to bottom, #34f703, #0f751b);
  text-decoration: none;
}